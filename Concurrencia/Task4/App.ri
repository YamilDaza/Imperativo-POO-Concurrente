programa app
areas
  area1: AreaP(1,1,1,10)
  area2: AreaP(2,11,2,20)
robots
  robot florero
	variables
		cantidad:numero
  comenzar
		cantidad:=0
		repetir 9
			si(HayFlorEnLaEsquina)
				tomarFlor
				cantidad:= cantidad + 1
			mover
		Informar('TotalFlores',cantidad)
  fin
variables
  r1: florero
  r2: florero
comenzar
  AsignarArea (r1, area1)
  AsignarArea (r2, area2)
	Iniciar (r1, 1, 1)
	Iniciar (r2, 2, 11)
fin
